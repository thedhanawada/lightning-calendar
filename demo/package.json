{
  "name": "@lightning-calendar/demo",
  "version": "1.0.0",
  "description": "Interactive demo for Lightning Calendar Core",
  "type": "module",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production rollup -c",
    "serve": "npx serve dist",
    "clean": "rm -rf dist",
    "analyze": "rollup-plugin-visualizer",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write 'js/**/*.js' 'css/**/*.css'"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@rollup/plugin-replace": "^5.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-visualizer": "^5.9.0",
    "serve": "^14.2.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
    }
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 100,
    "semi": true
  }
}